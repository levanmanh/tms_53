<%= form_for [:admin, @subject], method: :post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>

  <%= f.submit t "subjects.create_subject", class: "btn btn-primary" %>
<% end %>
